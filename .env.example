# ============================================================================
# AI Enhanced PDF Scholar - Environment Configuration
# Copy this file to .env and configure your values
# ============================================================================

# ============================================================================
# Application Configuration
# ============================================================================

# Environment: development, testing, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8000

# ============================================================================
# AI/LLM Configuration
# ============================================================================

# Google Gemini API Key (required for RAG functionality)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# LlamaIndex Configuration
LLAMA_INDEX_CACHE_DIR=./cache
LLAMA_INDEX_DOWNLOAD_CACHE_DIR=./cache/downloads

# ============================================================================
# Database Configuration
# ============================================================================

# SQLite database path
DATABASE_PATH=./data/library.db

# Connection pool settings
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30.0

# ============================================================================
# Storage Configuration
# ============================================================================

# Vector storage directory
VECTOR_STORAGE_DIR=./data/vector_indexes

# Document storage directory
DOCUMENT_STORAGE_DIR=./data/documents

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=100000000  # 100MB

# Allowed file extensions
ALLOWED_EXTENSIONS=.pdf

# ============================================================================
# Cache Configuration
# ============================================================================

# RAG cache settings
RAG_CACHE_MAX_ENTRIES=1000
RAG_CACHE_TTL_HOURS=24
RAG_CACHE_SIMILARITY_THRESHOLD=0.85

# ============================================================================
# Security Configuration
# ============================================================================

# CORS Configuration
# Environment-specific CORS origins (comma-separated, no spaces around commas)
# Development: Typically includes local frontend dev servers
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# CORS Security Notes:
# - Development: Allows localhost origins for local development
# - Testing: Should be minimal, test-specific origins only
# - Staging: Should mirror production domains but with staging URLs
# - Production: MUST be explicitly set to actual production domains only
#               Never use "*" or localhost in production
#               Always use HTTPS in production (https://)

# Examples for different environments:
# Development: http://localhost:3000,http://localhost:8000
# Staging: https://staging-frontend.yourdomain.com,https://staging-admin.yourdomain.com
# Production: https://app.yourdomain.com,https://admin.yourdomain.com

# Session secret key (change in production)
SECRET_KEY=your-secret-key-change-in-production

# Default admin password for initial setup
# If not set, a secure random password will be generated and logged
DEFAULT_ADMIN_PASSWORD=

# ============================================================================
# Security Headers Configuration
# ============================================================================

# Content Security Policy (CSP)
CSP_ENABLED=true
CSP_REPORT_URI=/api/security/csp-report
CSP_REPORT_TO_GROUP=csp-endpoint
# Enable Trusted Types for XSS protection (production only)
CSP_TRUSTED_TYPES=false

# HTTP Strict Transport Security (HSTS)
HSTS_MAX_AGE=31536000  # 1 year
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false  # Set to true when ready for HSTS preload list

# X-Frame-Options
X_FRAME_OPTIONS=DENY  # DENY, SAMEORIGIN, or ALLOW-FROM uri

# Referrer Policy
REFERRER_POLICY=strict-origin-when-cross-origin

# Permissions Policy
PERMISSIONS_POLICY_ENABLED=true

# Certificate Transparency
EXPECT_CT_MAX_AGE=86400  # 24 hours
EXPECT_CT_ENFORCE=false
EXPECT_CT_REPORT_URI=/api/security/ct-report

# Cross-Origin Policies
COEP=require-corp  # require-corp, unsafe-none, credentialless
COOP=same-origin-allow-popups  # same-origin, same-origin-allow-popups, unsafe-none
CORP=same-site  # same-site, same-origin, cross-origin

# Cookie Security
COOKIE_SAMESITE=lax  # strict, lax, none

# ============================================================================
# Development Configuration
# ============================================================================

# Frontend development server URL
FRONTEND_DEV_URL=http://localhost:3000

# Enable/disable hot reload
HOT_RELOAD=true

# Enable/disable API documentation
ENABLE_DOCS=true

# ============================================================================
# Testing Configuration
# ============================================================================

# Test database path
TEST_DATABASE_PATH=./test_data/test.db

# Test mode settings
TEST_MODE=false
TEST_SKIP_EXTERNAL_APIS=true

# ============================================================================
# Performance Configuration
# ============================================================================

# Worker process configuration
WORKERS=1
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# Maximum request size (bytes)
MAX_REQUEST_SIZE=104857600  # 100MB

# ============================================================================
# Monitoring & Logging Configuration
# ============================================================================

# Log file path
LOG_FILE_PATH=./logs/app.log

# Log rotation settings
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Enable/disable metrics collection
ENABLE_METRICS=false

# Metrics endpoint
METRICS_ENDPOINT=/metrics

# ============================================================================
# Docker Configuration
# ============================================================================

# Docker compose profile
COMPOSE_PROFILES=dev

# Container timezone
TZ=UTC

# ============================================================================
# Production Configuration
# ============================================================================

# Production-specific settings (only use in production)
# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Reverse proxy settings
BEHIND_PROXY=false
PROXY_HEADERS=true

# Rate limiting
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================================================
# Backup Configuration
# ============================================================================

# Automatic backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups

# ============================================================================
# External Services Configuration
# ============================================================================

# External API timeouts
EXTERNAL_API_TIMEOUT=30

# Retry configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_RAG_QUERIES=true
ENABLE_VECTOR_SEARCH=true
ENABLE_DOCUMENT_PREVIEW=true
ENABLE_BATCH_OPERATIONS=true

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# ============================================================================
# Performance Tuning
# ============================================================================

# Vector index configuration
VECTOR_INDEX_CHUNK_SIZE=1024
VECTOR_INDEX_CHUNK_OVERLAP=20

# RAG configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Database optimization
DB_ENABLE_WAL_MODE=true
DB_CACHE_SIZE_MB=128
DB_PAGE_SIZE_KB=64
DB_MMAP_SIZE_MB=512

# ============================================================================
# Development Tools
# ============================================================================

# Enable development tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILER=false

# API documentation
DOCS_URL=/docs
REDOC_URL=/redoc

# ============================================================================
# Notes
# ============================================================================

# 1. Never commit the actual .env file to version control
# 2. Keep .env.example up to date with all required variables
# 3. Use strong, unique values for SECRET_KEY in production
# 4. Ensure GEMINI_API_KEY is set for AI functionality
# 5. Adjust paths based on your deployment environment
# 6. Review and adjust resource limits for production use
# 7. Enable SSL/TLS in production environments
# 8. Consider using environment-specific configuration management