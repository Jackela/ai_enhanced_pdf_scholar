          "useTags": false
        },
        {
          "current": {
            "text": "ai-pdf-scholar-backend",
            "value": "ai-pdf-scholar-backend"
          },
          "hide": 0,
          "includeAll": false,
          "label": "Deployment",
          "multi": false,
          "name": "deployment",
          "options": [],
          "query": "label_values(kube_deployment_status_replicas{namespace=\"$namespace\"}, deployment)",
          "refresh": 1,
