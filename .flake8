# ============================================================================
# Flake8 Configuration for AI Enhanced PDF Scholar
# Python code style and quality enforcement
# ============================================================================

[flake8]

# ============================================================================
# Basic Configuration
# ============================================================================

# Maximum line length (compatible with Black formatter)
max-line-length = 88

# Select specific error codes to check
select = 
    E,    # pycodestyle errors
    W,    # pycodestyle warnings  
    F,    # pyflakes
    C,    # complexity
    B,    # flake8-bugbear
    I,    # isort

# Ignore specific error codes
ignore = 
    E203,   # whitespace before ':' (conflicts with Black)
    E501,   # line too long (handled by Black)
    W503,   # line break before binary operator (conflicts with Black)
    E266,   # too many leading '#' for block comment
    E402,   # module level import not at top of file
    F401,   # imported but unused (handled by autoflake)

# ============================================================================
# File Patterns
# ============================================================================

# Exclude files and directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    node_modules,
    frontend,
    migrations,
    alembic,
    .github,
    htmlcov,
    coverage_*,
    .coverage,
    *.pyc,
    *.pyo,
    *.pyd,
    .Python,
    .tox,
    .coverage.*

# Include file patterns
filename = 
    *.py

# ============================================================================
# Complexity Settings
# ============================================================================

# Maximum complexity for functions/methods
max-complexity = 10

# Maximum cognitive complexity
max-cognitive-complexity = 12

# ============================================================================
# Import Settings
# ============================================================================

# Import order style (compatible with isort)
import-order-style = google

# Application import names
application-import-names = 
    src,
    backend,
    tests

# ============================================================================
# Per-file Ignores
# ============================================================================

per-file-ignores = 
    # Test files can be more lenient
    tests/*.py: F401, F811, E501
    test_*.py: F401, F811, E501
    conftest.py: F401, F811
    
    # Allow complex imports in __init__.py files
    __init__.py: F401, F403
    
    # Config files can have complex setup
    config.py: E501
    
    # Web main can be complex
    web_main.py: C901
    
    # Database models can have long lines
    */models.py: E501
    
    # Migration files (if any)
    migrations/*.py: E501, F401

# ============================================================================
# Docstring Settings
# ============================================================================

# Docstring conventions
docstring-convention = google

# Require docstrings for these
require-code = true

# ============================================================================
# Naming Conventions
# ============================================================================

# Ignore naming errors for certain patterns
ignore-names = 
    setUp,
    tearDown,
    setUpClass,
    tearDownClass,
    setUpModule,
    tearDownModule,
    asyncSetUp,
    asyncTearDown

# ============================================================================
# Plugin Settings
# ============================================================================

# Flake8-bugbear settings
extend-ignore = 
    B008,   # Do not perform function calls in argument defaults (FastAPI Depends)
    B009,   # Do not call getattr with a constant attribute value

# Flake8-quotes settings
inline-quotes = double
multiline-quotes = double
docstring-quotes = double
avoid-escape = True

# ============================================================================
# Output Format
# ============================================================================

# Format for output
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# Show source code
show-source = True

# Show PEP reference
show-pep8 = True

# Statistics
statistics = True

# Count errors
count = True

# ============================================================================
# Performance Settings
# ============================================================================

# Enable parallel processing
jobs = auto

# ============================================================================
# Integration Settings
# ============================================================================

# Benchmark performance
benchmark = False

# Hang closing bracket
hang-closing = True

# Extend default ignore list instead of overriding
extend-default-ignore = True