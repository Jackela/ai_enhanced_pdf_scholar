{
  "name": "ai-enhanced-pdf-scholar-frontend",
  "version": "2.0.0",
  "description": "Modern web frontend for AI Enhanced PDF Scholar",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "npm run type-check && vite build",
    "build:ci": "cross-env CI=true NODE_ENV=production vite build --mode production",
    "build:analyze": "npm run build && npm run analyze",
    "preview": "vite preview",
    "preview:host": "vite preview --host",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules && npm install",
    "analyze": "vite-bundle-analyzer dist/assets",
    "check-deps": "npm outdated",
    "check-size": "size-limit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:build": "npm run build && npm run preview",
    "health-check": "npm run type-check && npm run lint && npm run format:check"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-toast": "^1.2.14",
    "@tanstack/react-query": "^5.8.4",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@types/node": "^24.0.13",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "pdfjs-dist": "^4.7.76",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-pdf": "^9.1.1",
    "react-router-dom": "^6.20.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@size-limit/preset-app": "^11.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.0.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^6.0.7",
    "vite-bundle-analyzer": "^0.9.4",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.17.0",
    "npm": ">=10.9.2"
  },
  "overrides": {
    "nanoid": "^5.0.8",
    "prismjs": "^1.30.0",
    "tar-fs": "^3.0.9",
    "ws": "^8.18.0",
    "puppeteer-core": "^23.8.0",
    "highlight.js": "^11.10.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "name": "Main Bundle",
      "path": "dist/assets/index-*.js",
      "limit": "300 KB"
    },
    {
      "name": "React Vendor",
      "path": "dist/assets/react-vendor-*.js",
      "limit": "150 KB"
    },
    {
      "name": "PDF Vendor",
      "path": "dist/assets/pdf-vendor-*.js",
      "limit": "50 KB"
    },
    {
      "name": "UI Vendor",
      "path": "dist/assets/ui-vendor-*.js",
      "limit": "100 KB"
    },
    {
      "name": "CSS Bundle",
      "path": "dist/assets/index-*.css",
      "limit": "50 KB"
    }
  ]
}
